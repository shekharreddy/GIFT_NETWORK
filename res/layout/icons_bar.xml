 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/facebook_icon"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_marginRight="5dip"
                android:background="@drawable/icon_facebook" >
            </ImageView>

            <ImageView
                android:id="@+id/googleplus_icon"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_marginRight="5dip"
                android:background="@drawable/icon_googleplus" >
            </ImageView>

            <ImageView
                android:id="@+id/twitter_icon"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_marginRight="5dip"
                android:background="@drawable/icon_twitter" >
            </ImageView>

            <ImageView
                android:id="@+id/linked_icon"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_marginRight="5dip"
                android:background="@drawable/icon_linkedin" >
            </ImageView>
        </LinearLayout>